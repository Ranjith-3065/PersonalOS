<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<title>PersonalOS | Login</title>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

<style>
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Inter', sans-serif;
}

body {
  min-height: 100vh;
  background: linear-gradient(145deg, #020617, #0f172a);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #e5e7eb;
}

.auth-card {
  width: 100%;
  max-width: 420px;
  background: #111827;
  padding: 40px;
  border-radius: 18px;
  box-shadow: 0 20px 60px rgba(0,0,0,0.6);
}

.logo {
  text-align: center;
  font-size: 26px;
  font-weight: 600;
  margin-bottom: 6px;
  color: #38bdf8;
}

.subtitle {
  text-align: center;
  font-size: 14px;
  color: #9ca3af;
  margin-bottom: 30px;
}

.field {
  margin-bottom: 18px;
}

.field label {
  font-size: 13px;
  color: #9ca3af;
  display: block;
  margin-bottom: 6px;
}

.field input {
  width: 100%;
  padding: 12px 14px;
  background: #020617;
  border: 1px solid #1f2937;
  border-radius: 10px;
  color: #e5e7eb;
  outline: none;
}

.field input:focus {
  border-color: #38bdf8;
}

.btn {
  width: 100%;
  padding: 13px;
  margin-top: 10px;
  background: #38bdf8;
  border: none;
  border-radius: 12px;
  font-size: 15px;
  font-weight: 600;
  cursor: pointer;
  color: #020617;
  transition: 0.3s;
}

.btn:hover {
  background: #0ea5e9;
}

.footer-text {
  margin-top: 20px;
  text-align: center;
  font-size: 14px;
  color: #9ca3af;
}

.footer-text a {
  color: #38bdf8;
  text-decoration: none;
}
</style>
</head>

<body>
  <div class="auth-card">
    <div class="logo">PersonalOS</div>
    <div class="subtitle">Sign in to your workspace</div>

    <div class="field">
      <label>Email</label>
      <input name="email" type="email" placeholder="you@personalos.dev">
    </div>

    <div class="field">
      <label>Password</label>
      <input name="password" type="password" placeholder="••••••••">
    </div>

    <button class="btn">Login</button>

    <div class="footer-text">
      Don’t have an account? <a href="signup">Create one</a>
    </div>
  </div>
</body>
<script>
  const loginbtn = document.querySelector('.btn');
  loginbtn.addEventListener('click', async ()=>{
    const email = document.querySelector('input[name="email"]').value;
    const password = document.querySelector('input[name="password"]').value;
    const res = await fetch('/personalOS/login',{
      method:"POST",
      headers:{
        "content-type" : "application/json"
      },
      body:JSON.stringify({email,password})
    })
    const data = await res.json();
    if(data.success){
      window.location.href = "/personalOS/dashboard"
      alert(data.message);
    }
    else{
      alert(data.message);
      window.location.href = "/personalOS/signup"
    }
  })
</script>
</html>
